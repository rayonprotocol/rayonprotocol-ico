{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "alwaysStrict": false,
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./node_modules/web3-typescript-typings/index.d.ts"]
}
